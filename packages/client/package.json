{
  "name": "ftp-client-app",
  "version": "1.0.0",
  "private": true,
  "main": "src/electron/main.js",
  "scripts": {
    "dev:renderer": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "build:renderer": "vite build",
    "build": "npm run build:renderer && electron-builder",
    "dist": "npm run build",
    "start": "electron ."
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.6",
    "@mui/material": "^7.3.6",
    "basic-ftp": "^5.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^7.3.0"
  },
  "build": {
    "appId": "com.example.ftpclient",
    "productName": "FTP Client",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
